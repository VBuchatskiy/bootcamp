{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "*": [
        "node_modules/*",
      ],
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}